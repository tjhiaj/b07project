<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">
    <TextView
        android:id="@+id/top_header_announcements"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/teal"
        android:text="@string/announcements"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="604dp"
        android:padding="32dp"
        app:layout_constraintTop_toBottomOf="@id/top_header_announcements"
        app:layout_constraintBottom_toTopOf="@id/bottom_header_announcements"/>

    <View
        android:id="@+id/bottom_header_announcements"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/teal"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>