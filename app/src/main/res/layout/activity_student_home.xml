<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="#FFF1D0"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="144dp"
        android:layout_height="136dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/twilight_wave" />

    <Button
        android:id="@+id/studentComplaintsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complaints"
        android:onClick="onStudentComplaintsButtonClick"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/studentAnnouncementsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Announcements"
        android:onClick="onStudentAnnouncementsButtonClick"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/programButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PoST"
        android:onClick="programButtonClick"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/studentEventsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Events"
        android:onClick="onStudentEventsButtonClick"
        android:layout_marginBottom="38dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/greetingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, Student!"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:textColor="#086788" />
</LinearLayout>