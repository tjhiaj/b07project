<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="116dp">

        <LinearLayout
            android:id="@+id/viewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="342dp"
                android:layout_height="match_parent"
                android:onClick="expand">

                <TextView
                    android:id="@+id/subject1"
                    android:layout_width="190dp"
                    android:layout_height="61dp"
                    android:text="@string/viewSubject"
                    android:textAlignment="center"
                    android:textSize="36sp" />

                <ScrollView
                    android:id="@+id/scroll1"
                    android:layout_width="match_parent"
                    android:layout_height="172dp">

                    <TextView
                        android:id="@+id/details1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="complains1"
                        android:textSize="20sp" />
                </ScrollView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="342dp"
                android:layout_height="match_parent"
                android:onClick="expand">

                <TextView
                    android:id="@+id/subject2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <ScrollView
                    android:id="@+id/scroll2"
                    android:layout_width="match_parent"
                    android:layout_height="172dp">

                    <TextView
                        android:id="@+id/details2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="20sp" />
                </ScrollView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="expand">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="408dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/subject3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1234567890asdfghjdfgh .                               " />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="123dp"
                            android:layout_height="wrap_content"
                            android:onClick="expand"
                            android:text="@string/expand" />
                    </LinearLayout>

                    <ScrollView
                        android:id="@+id/scroll3"
                        android:layout_width="355dp"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/details3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/viewComplaints"
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </ScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="358dp"
                android:layout_height="165dp">

                <ScrollView
                    android:layout_width="361dp"
                    android:layout_height="166dp">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textSize="20sp" />
                </ScrollView>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>