<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/announcement_border"
    android:padding="16dp">

    <ImageView
        android:id="@+id/trumpetIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/trumpet" />

    <TextView
        android:id="@+id/subjectTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="100dp"
        android:layout_toEndOf="@id/trumpetIcon"
        android:textColor="#086788"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subjectTextView"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="100dp"
        android:layout_toEndOf="@id/trumpetIcon"
        android:textColor="#000000" />

    <Button
        android:id="@+id/dismissalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/subjectTextView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:backgroundTint="@color/beige"
        android:onClick="onDismissalClick"
        android:text="Dismiss"
        android:textColor="@color/navyBlue" />
</RelativeLayout>